<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_data_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:text="nome"
        app:layout_constraintEnd_toStartOf="@id/item_data_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_data_id_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="anderson"
        android:textColor="@android:color/black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/item_data_edit"
        app:layout_constraintStart_toStartOf="@id/item_data_name_label"
        app:layout_constraintTop_toBottomOf="@id/item_data_name_label" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="16sp"
        android:background="@color/colorCinza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_data_id_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/item_data_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16sp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

